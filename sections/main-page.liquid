<div class="ps-page ps-page--post-single" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="ps-page__header">
        <div class="container">
            {% render 'breadcrumb' %}

            {%- if page.metafields.custom.banner != blank -%}
                <div class="ps-page__hero"><img src="{{ page.metafields.custom.banner | image_url: width: '1540' }}" alt="{{ page.title | escape }}" /></div>
            {%- endif -%}
        </div>
    </div>
    <div class="ps-page__content">
        <div class="container">
            <div class="ps-layout__left">
                <article class="ps-post ps-post--detail">
                    <div class="ps-post__header">
                      {% if page.handle == "quienes-somos" %}
                        <h1 style="font-size: 2.2em; font-weight: 700; color: #0b2b5e; text-transform: uppercase; text-align: center; letter-spacing: 1px; margin-bottom: 10px;">
                          {{ page.title | escape }}
                        </h1>
                        <div style="width: 60px; height: 4px; background-color: #d4af37; margin: 0 auto 30px;"></div>
                      {% else %}
                        <h1 class="ps-post__title">{{ page.title | escape }}</h1>
                      {% endif %}
                    </div>
                    <div class="ps-post__content ps-document">{{ page.content }}</div>
                </article>
            </div>
        </div>
    </div>
</div>

<!-- Bloque JSON-LD motores de IA (AEO) -->
<script type="application/ld+json">
