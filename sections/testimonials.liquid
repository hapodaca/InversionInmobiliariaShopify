<div class="ps-testimonials" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="container">
        <div class="ps-section__wrapper">
            <div class="ps-section__left">
                <div class="ps-block--site-score bg--cover" data-background="{{ 'destination-bg.jpg' | asset_url }}">
                    <h3>{{ section.settings.rating_number }}</h3>
                    <div class="ps-block__ratings">
                        <p>{{ section.settings.rating_text }}</p>
                    </div>
                    <div class="ps-block__footer">
                        <p>{{ section.settings.rating_text_footer }}</p>
                        {%- if section.settings.brand_logo != blank -%}
                            <img src="{{ section.settings.brand_logo | image_url }}" alt="{{ section.settings.rating_text_footer }}" />
                        {%- endif -%}
                    </div>
                </div>
            </div>
            <div class="ps-section__right">
                <div class="ps-block--testimonial">
                    <div class="ps-block__content">
                        <h4>{{ section.settings.content }}</h4>
                    </div>
                    <div class="ps-block__bottom">
                        {{ section.settings.content_footer }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "homepage-one",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
        "type": "text",
        "id": "rating_number",
        "default": "4.8",
        "label": "t:sections.testimonials.settings.rating_number.label"
    },
    {
        "type": "text",
        "id": "rating_text",
        "default": "Trustscore on 215 reviews",
        "label": "t:sections.testimonials.settings.rating_text.label"
    },
    {
        "type": "text",
        "id": "rating_text_footer",
        "label": "t:sections.testimonials.settings.rating_text_footer.label"
    },
    {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "t:sections.testimonials.settings.rating_text_footer.logo"
    },
    {
        "type": "inline_richtext",
        "id": "content",
        "label": "t:sections.testimonials.settings.content.label"
    },
    {
        "type": "richtext",
        "id": "content_footer",
        "label": "t:sections.testimonials.settings.content_footer.label"
    },
    {
        "type": "header",
        "content": "Spacing Options"
    },
    {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Margin Top",
        "default": 0
    },
    {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 0
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
    }
  ],
  "presets": [
      {
          "name": "Testimonials",
          "category": "Blog",
          "settings": {
            "rating_number": "4.8",
            "rating_text": "Trustscore on 215 reviews",
            "rating_text_footer": "See all review on",
            "brand_logo": "shopify:\/\/shop_images\/trust-pilot.png",
            "content": "“As a buyer in a busy market where everyone is a real estate agent, I seek transparency in true numbers & Finderland is my first and only choice.Searches for multiplexes, property comparisons, and the loan estimator. Works great.”",
            "content_footer": "<p>Thiago Alcatara<\/p>\n<p><span>Chicago, FL<\/span><\/p>"
          }
      }
  ]
}
{% endschema %}
