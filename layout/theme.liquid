<script>
(function () {
  // üëâ Tu endpoint y clave del Webhook n8n
  const N8N_URL = 'https://automation.inversioninmobiliaria.com.co/webhook/prospecto';
  const N8N_KEY = '9f2e4b1a7d3c4e5091a6c2d8b7e4f0a19c4e2a7b5d3f1e0c9b8a7d6c5e4f3a2b';

  // Mapa de recursos (descarga, gu√≠as, etc.)
  const RESOURCE_MAP = {
    'guia-preventas': 'Gu√≠a de Preventas y Cesiones de Derechos',
    'checklist': 'Checklist - 15 puntos para evaluar cualquier proyecto',
    'calculadora': 'Calculadora de rentabilidad inmobiliaria TIR',
    'primera-inversion': 'Gu√≠a completa para tu primera inversi√≥n',
    'errores': 'Errores que m√°s dinero han costado a inversionistas',
    'Publica_tu_Proyecto': 'Publica tu Proyecto Inmobiliario'
  };

  function detectRecurso() {
    const h = document.querySelector('#infoPopup .inv-popup-header h3');
    if (h) return h.textContent.replace(/^Env√≠ame\s*-\s*/, '').trim();
    const q = new URLSearchParams(location.search);
    for (const k in RESOURCE_MAP) if (q.has(k)) return RESOURCE_MAP[k];
    return '';
  }

  function looksLikeLead(form) {
    const hasLeadFields = Array.from(form.elements).some(el =>
      /contact\[|email|phone|name|message|body/i.test(el.name || '')
    );

    const newsletterish =
      form.matches('.newsletter-form, [id*="newsletter"]') ||
      form.querySelector('[name="customer[email]"]');

    // üëá NUEVO: tambi√©n cuenta si el form est√° dentro de .ps-form--agent-contact
    const insideAgentPopup = !!form.closest('.ps-form--agent-contact');

    return (
      form.matches('.inv-popup-form, .contact-form') ||
      insideAgentPopup ||
      hasLeadFields ||
      !!newsletterish
    );
  }


  function toJSON(form) {
    const fd = new FormData(form);
    const payload = {
      ts: new Date().toISOString(),
      url: location.href,
      form_id: form.id || '',
      form_name: form.getAttribute('name') || '',
      form_action: form.getAttribute('action') || '',
      form_type: form.querySelector('[name="customer[email]"]')
        ? 'newsletter'
        : 'lead',
      recurso: detectRecurso(),
      fields: {}
    };
    fd.forEach((v, k) => (payload.fields[k] = typeof v === 'string' ? v : ''));
    const q = new URLSearchParams(location.search);
    ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'].forEach(k => {
      if (q.get(k)) payload[k] = q.get(k);
    });
    return payload;
  }

  // Env√≠o no bloqueante
  function sendToN8N(payload) {
    try {
      fetch(N8N_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'x-api-key': N8N_KEY
        },
        body: JSON.stringify(payload),
        keepalive: true
      }).catch(() => {});
    } catch (e) {}
  }

  // Engancha formularios, excluyendo el popup
  function bind(form) {
    if (form.__n8nBound || !looksLikeLead(form)) return;

    // üß© Evitar duplicado en el popup ‚ÄúPublica tu Proyecto‚Äù
    if (form.closest('#infoPopup')) return;

    form.__n8nBound = true;
    form.addEventListener('submit', () => sendToN8N(toJSON(form)), { capture: true });
  }

  function scan() {
    document.querySelectorAll('form').forEach(bind);
  }

  new MutationObserver(scan).observe(document.documentElement, {
    subtree: true,
    childList: true
  });

  document.addEventListener('DOMContentLoaded', scan);
  scan();
})();
</script>


<script>
function initPhoneInputs() {
  if (typeof window.intlTelInput === 'undefined') {
    setTimeout(initPhoneInputs, 100);
    return;
  }

  const popupInput = document.querySelector('#PopupPhone');
  if (popupInput && !popupInput.dataset.itiInitialized) {
    popupInput.dataset.itiInitialized = "true";
    
    const popupIti = window.intlTelInput(popupInput, {
      initialCountry: "co",
      preferredCountries: ["co","us","es","mx"],
      separateDialCode: true,
      autoPlaceholder: "off"
    });

    popupInput._iti = popupIti;
    
    // Dropdown positioning
    const observer = new MutationObserver(() => {
      const dropdown = document.querySelector('.iti__country-list');
      if (dropdown && !dropdown.classList.contains('iti__hide')) {
        const formGroup = popupInput.closest('.inv-form-group');
        if (formGroup) {
          const rect = formGroup.getBoundingClientRect();
          const isMobile = window.innerWidth <= 768;
          dropdown.style.width = rect.width + 'px';
          dropdown.style.maxWidth = rect.width + 'px';
          dropdown.style.left = rect.left + 'px';
          dropdown.style.top = (isMobile ? rect.bottom + 5 : rect.bottom + 2) + 'px';
        }
      }
    });
    
    observer.observe(document.body, { 
      childList: true, 
      subtree: true, 
      attributes: true,
      attributeFilter: ['class']
    });
    
    // Guardar los datos del tel√©fono en el form antes del submit
    const form = popupInput.closest("form");
    if (form) {
      // Guardar los datos del tel√©fono en el formulario
      form.addEventListener("submit", (e) => {
        const inputValue = popupInput.value.replace(/\D/g, '');
        if (inputValue) {
          const countryData = popupIti.getSelectedCountryData();
          const dialCode = countryData.dialCode;
          const fullNumber = '+' + dialCode + inputValue;
          const national = inputValue.replace(dialCode, '');

          // Guardar datos en el form para que N8N los capture
          form.dataset.phoneData = JSON.stringify({
            full: fullNumber,
            code: '+' + dialCode,
            country: countryData.name,
            national: national
          });
        }
      }, true);
    }
  }

  // Agent input (sin cambios)
  const agentInput = document.querySelector('#ContactFormPhone');
  if (agentInput && !agentInput.dataset.itiInitialized) {
    agentInput.dataset.itiInitialized = "true";
    const agentIti = window.intlTelInput(agentInput, {
      initialCountry: "co",
      preferredCountries: ["co","us","es","mx"],
      separateDialCode: false
    });
    const form = agentInput.closest("form");
    if (form) {
      form.addEventListener("submit", () => {
        agentInput.value = agentIti.getNumber();
      });
    }
  }
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initPhoneInputs);
} else {
  initPhoneInputs();
}
</script>



